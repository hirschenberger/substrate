<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="Shawn Tabrizi, Falco Hirschenberger">
		<title>Substrate Benchmark Results</title>

		<!-- Bootstrap core CSS -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	</head>
	<body>

		<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
			<a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">Substrate Benchmark Results</a>
		</header>


		<div class="container-fluid">
			<div class="row">
				<div class="col-2">
					<div id="menu" class="list-group">
						{{#each benchmarks as |benchmark|}}
							{{#with benchmark}}
								<a class="list-group-item list-group-item-action"
								   href="#benchmark_{{name}}">{{name}}</a>
							{{/with}}
						{{/each}}
					</div>
				</div>
				<div class="col-10">
					{{#each benchmarks as |benchmark|}}
						{{#with benchmark}}
							<div class="card mt-2" data-bs-spy="scroll" data-bs-target="#menu" data-bs-offset="0" tabidex="0">
								<h5 class="card-header" id="benchmark_{{name}}">{{name}}</h5>
								<div class="card-body">
									{{#each component_weight as |weight|}}
										<p>{{weight.name}} slope: {{weight.slope}}</p>
									{{/each}}
								</div>
							</div>
						{{/with}}
					{{/each}}
				</div>
			</div>
		</div>


		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js" integrity="sha384-zNy6FEbO50N+Cg5wap8IKA4M/ZnLJgzc6w2NqACZaK0u0FXfOWRRJOnQtpZun8ha" crossorigin="anonymous"></script>
	</body>
</html>
